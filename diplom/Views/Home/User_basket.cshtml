    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var cityInput = document.getElementById('cityInput');
            var suggestionsContainer;

            // Функция для загрузки файла с городами и инициализации Autocomplete
            function initializeAutocomplete() {
                // Асинхронная загрузка файла с городами
                var xhr = new XMLHttpRequest();
                xhr.open('GET', '/goroda.txt', true);
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 4 && xhr.status === 200) {
                        var data = xhr.responseText;
                        var cities = data.split('\n').map(function (city) {
                            return city.trim(); // Удаляем лишние пробелы
                        });

                        // Инициализация Autocomplete
                        cityInput.addEventListener('input', function () {
                            var inputValue = cityInput.value.trim().toLowerCase();
                            var suggestions = cities.filter(function (city) {
                                return city.toLowerCase().startsWith(inputValue);
                            });

                            showSuggestions(suggestions);
                        });
                    }
                };
                xhr.send();
            }

            // Функция для отображения предложений автодополнения
            function showSuggestions(suggestions) {
                hideSuggestions(); // Скрыть предыдущие предложения

                suggestionsContainer = document.createElement('div');
                suggestionsContainer.id = 'suggestionsContainer';
                suggestionsContainer.style.position = 'absolute';
                suggestionsContainer.style.width = cityInput.offsetWidth + 'px';
                suggestionsContainer.style.border = '1px solid #ccc';
                suggestionsContainer.style.backgroundColor = '#fff';
                suggestionsContainer.style.zIndex = '1000';

                // Добавляем предложения в контейнер
                suggestions.forEach(function (city) {
                    var suggestionElement = document.createElement('div');
                    suggestionElement.textContent = city;
                    suggestionElement.style.padding = '5px';
                    suggestionElement.style.cursor = 'pointer';
                    suggestionElement.addEventListener('click', function () {
                        cityInput.value = city; // Заполняем поле ввода выбранным городом
                        hideSuggestions(); // Скрываем контейнер с предложениями
                    });
                    suggestionsContainer.appendChild(suggestionElement);
                });

                // Позиционируем контейнер с предложениями под полем ввода
                var inputRect = cityInput.getBoundingClientRect();
                suggestionsContainer.style.top = (inputRect.top + inputRect.height) + 'px';
                suggestionsContainer.style.left = inputRect.left + 'px';

                // Вставляем контейнер с предложениями в DOM
                document.body.appendChild(suggestionsContainer);

                // Обработчик клика вне контейнера с предложениями
                document.addEventListener('click', handleClickOutside);
            }

            // Функция для скрытия контейнера с предложениями
            function hideSuggestions() {
                if (suggestionsContainer) {
                    suggestionsContainer.remove();
                    suggestionsContainer = null;
                    document.removeEventListener('click', handleClickOutside);
                }
            }

            // Обработчик клика вне контейнера с предложениями
            function handleClickOutside(event) {
                if (suggestionsContainer && !suggestionsContainer.contains(event.target) && event.target !== cityInput) {
                    hideSuggestions();
                }
            }

            // Инициализируем Autocomplete при загрузке документа
            initializeAutocomplete();
        });

    </script>

