                showNotification('Пожалуйста, укажите город на русском языке', 'warning');
                return;
            }

            // Инициализация карты Яндекс.Карт
            ymaps.ready(function () {
                // Находим координаты города
                ymaps.geocode(city).then(function (res) {
                    if (res.geoObjects.getLength() === 0) {
                        showNotification('Пожалуйста, введите корректный город', 'warning');
                        return;
                    }

                    var coordinates = res.geoObjects.get(0).geometry.getCoordinates();

                    // Проверяем, если карта уже существует, удаляем её
                    if (myMap) {
                        myMap.destroy();
                    }

                    // Показываем mapContainer
                    document.getElementById('mapContainer').style.display = 'block';

                    // Показываем модальное окно
                    document.getElementById('mapModal').style.display = 'flex';

                    // Создаем карту с центром на указанном городе
                    myMap = new ymaps.Map("mapContainer", {
                        center: coordinates,
                        zoom: 12
                    });

                    // Обработчик клика по карте
                    myMap.events.add('click', function (e) {
                        var coords = e.get('coords');
                        // Преобразуем координаты в адрес
                        ymaps.geocode(coords).then(function (res) {
                            var firstGeoObject = res.geoObjects.get(0);
                            var address = firstGeoObject.getAddressLine();
                            // Помещаем адрес в поле адреса
                            document.getElementById('addressInput').value = address;
                            // Закрываем модальное окно с картой
                            closeMap();
                        });
                    });
                });
            });
        }

        function closeMap() {
            document.getElementById('mapModal').style.display = 'none';
        }
    </script>

